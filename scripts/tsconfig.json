{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node18",
        "moduleResolution": "node16",
        "typeRoots": ["./@types", "./node_modules/@types"],

        "rootDir": "./src",
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "strict": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["src/**/*", "@types/**/*"]
}
